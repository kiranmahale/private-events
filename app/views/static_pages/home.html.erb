	
<div class="center jumbotron">
	<h1> Welcome to Private Events</h1>
	
	<% if logged_in? %>

	<% else %>
	<span> Sign Up or Login to join events </span><br>
	<%= link_to "SignUp", signup_path, class: "btn btn-lg btn-primary" %>
	<% end %>
</div>
<br>
	
	<div class="col-lg-12 ">
	<h3 class="center">Following are the Upcoming/Todays Events, please signup to get invitation </h3>
	<div class="table-responsive">
		<table class="table">
			<thead>
				<tr>
					<th>Title</th>
					<th>Description</th>
					<th>Date</th>
				</tr>
			</thead>
			<tbody>
			<% @events.each do |event| %>
				<tr>
					<td><%= link_to event.title, event %></td>
					<td><%= event.description %></td>

					<td><%= event.date_of %></td>
					
				</tr>
				<% end %>
			</tbody>
		
		</table>
	</div>
	</div>
	
	
	
	

